@{
    var errorMessage = TempData["ErrorMessage"] as string;
    if (!string.IsNullOrEmpty(errorMessage))
    {
        <script>
            alert('@errorMessage');
        </script>
    }
}
@{
    Layout = "~/Views/Shared/_adminsLayout.cshtml";
}
@model Vitality.Models.NurseRegistration

@{
    ViewData["Title"] = "Nurse Registration";
}

<div class="page-wrapper">
    <div class="content container-fluid">

        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title">Register Nurse</h3>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Nurse Registration</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">Name</label>
                                <input asp-for="NurseName" required class="form-control" />
                                <span asp-validation-for="NurseName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Email</label>
                                <input required asp-for="NurseEmail" type="email" class="form-control" />
                                <span asp-validation-for="NurseEmail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Phone #</label>
                                <input required type="number" class="form-control" />
                                <span asp-validation-for="NursePhoneNo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Degree</label>
                                <select asp-for="Degree" class="form-control" asp-items="ViewBag.Degree"></select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Image</label>
                                <input required asp-for="NurseImg" type="file" name="file" class="form-control" />
                                <span asp-validation-for="NurseImg" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Register" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>