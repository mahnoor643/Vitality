<div class="row">
    <div class="col-md-4">
        <form asp-action="nurseEdit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NurseRegistrationsId" />
            <div class="form-group">
