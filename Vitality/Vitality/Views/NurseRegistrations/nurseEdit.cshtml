                <input asp-for="NursePhoneNo" class="form-control" />
                <span asp-validation-for="NursePhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Degree" class="control-label"></label>
                <select asp-for="Degree" class="form-control" asp-items="ViewBag.Degree"></select>
                <span asp-validation-for="Degree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NurseImg" class="control-label"></label>
                <input asp-for="NurseImg" name="file" type="file" class="form-control" />
                <span asp-validation-for="NurseImg" class="text-danger"></span>
            </div>
