@{
    var errorMessage = TempData["ErrorMessage"] as string;
    if (!string.IsNullOrEmpty(errorMessage))
    {
        <script>
            alert('@errorMessage');
        </script>
    }
}
@{
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}
@model Vitality.Models.DoctorsRegistration

@{
    ViewData["Title"] = "Edit";
}

<div class="col-md-7 col-lg-8 col-xl-9">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Add Slot Day</h4>
        </div>
        <div class="card-body">
        <form asp-action="Edit" asp-controller="DoctorsRegistrations" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DoctorsId" />
            <div class="form-group">
                <label asp-for="DoctorsName" class="control-label"></label>
                <input asp-for="DoctorsName" class="form-control" />
                <span asp-validation-for="DoctorsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorsDegree" class="control-label"></label>
                <select asp-for="DoctorsDegree" class="form-control" asp-items="ViewBag.DoctorsDegree"></select>
                <span asp-validation-for="DoctorsDegree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorsCategory" class="control-label"></label>
                <select asp-for="DoctorsCategory" class="form-control" asp-items="ViewBag.DoctorsCategory"></select>
                <span asp-validation-for="DoctorsCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorsPhoneNo" class="control-label"></label>
                <input asp-for="DoctorsPhoneNo" class="form-control" />
                <span asp-validation-for="DoctorsPhoneNo" class="text-danger"></span>
            </div>
           @* <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="DoctorsEmail" class="control-label"></label>
                <input asp-for="DoctorsEmail" class="form-control" />
                <span asp-validation-for="DoctorsEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorsPwd" class="control-label"></label>
                <input asp-for="DoctorsPwd" type="password" class="form-control" />
                <span asp-validation-for="DoctorsPwd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorsImg" class="control-label"></label>
                <input asp-for="DoctorsImg" class="form-control" type="file" name="file" />
                <span asp-validation-for="DoctorsImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        </div>
    </div>
</div>