@{
    var errorMessage = TempData["ErrorMessage"] as string;
    if (!string.IsNullOrEmpty(errorMessage))
    {
        <script>
            alert('@errorMessage');
        </script>
    }
}
@model Vitality.Models.PatientsRegistration

@{
    ViewData["Title"] = "Patient Registration";
}

<div class="content top-space">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">

                <div class="account-content">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7 col-lg-6 login-left">
                            <img src="~/../assets/img/login-banner.png" class="img-fluid" alt="Login Banner">
                        </div>
                        <div class="col-md-12 col-lg-6 login-right">
                            <div class="login-header">
                                <h3>Patient Register <a asp-action="Create" asp-controller="DoctorsRegistrations">Not a Patient?</a></h3>
                            </div>
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group form-focus">
                                    <input asp-for="PatientsName" required class="form-control" />
                                    <label class="form-label">Patient Name</label><br />
                                    <span asp-validation-for="PatientsName" class="text-danger"></span>
                                </div>
                                <div class="form-group form-focus">
                                    <input asp-for="PatientsEmail" required type="email" class="form-control" />
                                    <label class="form-label"></label>Email<br />
                                    <span asp-validation-for="PatientsEmail" class="text-danger"></span>
                                </div>
                                <div class="form-group form-focus">
                                    <input asp-for="PatientsPhoneNo" required type="number" class="form-control" />
                                    <label class="form-label">Phone #</label><br />
                                    <span asp-validation-for="PatientsPhoneNo" class="text-danger"></span>
                                </div>
                                <div class="form-group form-focus">
                                    <input asp-for="PatientsPwd" required type="password" class="form-control" />
                                    <label class="form-label">Password</label><br />
                                    <span asp-validation-for="PatientsPwd" class="text-danger"></span>
                                </div>
                                <div class="form-group form-focus">
                                    <input type="submit" value="Register" class="btn btn-primary" /><br /><br />
                                </div>
                            </form>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
